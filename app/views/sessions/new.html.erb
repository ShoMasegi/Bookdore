<h1>Login</h1>

<%= form_with scope: :session, local: true do |form| %>
  <div class="form-group">
    <%= form.label :email, 'E-mail' %>
    <%= form.text_field :email, class: 'form-control', id: 'session_email' %>
  </div>
  <div class="form-group">
    <%= form.label :password, 'Password' %>
    <%= form.password_field :password, class: 'form-control', id: 'session_password' %>
  </div>
  <%= form.submit 'Login', class: 'btn btn-primary' %>
<% end %>
