<h1>User Detail</h1>

<div class="nav justify-content-end">
  <%= link_to 'List', admin_users_path, class: 'nav-link' %>
</div>
<table class="table table-hover">
  <tbody>
  <tr>
    <th><%= User.human_attribute_name(:id) %></th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th><%= User.human_attribute_name(:name) %></th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th><%= User.human_attribute_name(:email) %></th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th><%= User.human_attribute_name(:admin) %></th>
    <td><%= @user.admin? ? 'Admin' : 'Normanl' %></td>
  </tr>
  <tr>
    <th><%= User.human_attribute_name(:created_at) %></th>
    <td><%= @user.created_at %></td>
  </tr>
  <tr>
    <th><%= User.human_attribute_name(:updated_at) %></th>
    <td><%= @user.updated_at %></td>
  </tr>
  </tbody>
</table>
<%= link_to "edit", edit_admin_user_path, class: 'btn btn-primary mr-3' %>
<%= link_to "delete", [:admin, @user], method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger' %>
