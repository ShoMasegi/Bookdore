<% provide(:title, 'Create card') %>
<h1>Create card</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@card) do |form| %>
      <%= render 'shared/error_messages' %>

      <%= form.label :book %>
      <%= form.text_field :book, class: 'form-control' %>

      <%= form.label :status %>
      <%= form.text_field :status, class: 'form-control' %>

      <%= form.submit "Create new card", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
