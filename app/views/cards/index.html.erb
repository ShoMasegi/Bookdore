<h1>
  Cards Table
</h1>
<table class="table table-hover">
  <thead class="thead-default">
  <tr>
    <th><%= sort_link(@q, :created_at) %></th>
    <th>book</th>
    <th>status</th>
    <th><%= sort_link(@q, :deadline) %></th>
  </tr>
  </thead>
  <tbody>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.created_at %></td>
      <td><%= link_to card.book, card_path(card.id) %></td>
      <td><%= card.status %></td>
      <td><%= card.deadline %></td>
      <td>
        <%= link_to "edit", edit_card_path(card), class: 'btn btn-primary mr-3' %>
        <%= link_to "delete", card, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-primary' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
